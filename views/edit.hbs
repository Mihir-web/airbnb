<form action="/listing/edit/{{listing._id}}" method="POST">
  <label for="name">Name:</label>
  <input type="text" id="name" name="name" value="{{listing.name}}" required />

  <label for="price">Price:</label>
  <input type="number" id="price" name="price" value="{{listing.price}}" required />

  <label for="description">Description:</label>
  <textarea id="description" name="description" required>{{listing.description}}</textarea>

  <label for="bedrooms">Bedrooms:</label>
  <input type="number" id="bedrooms" name="bedrooms" value="{{listing.bedrooms}}" required />

  <label for="bathrooms">Bathrooms:</label>
  <input type="number" id="bathrooms" name="bathrooms" value="{{listing.bathrooms}}" required />


  <button type="submit" class="btn btn-success">Update</button>
</form>
